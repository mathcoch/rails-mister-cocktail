<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= @dose.errors.messages[:cocktail][0] if @dose.errors.messages[:cocktail][0] %>
  <%= f.association :ingredient, collection: Ingredient.order('name ASC') %>
  <%= f.input :description %>
  <%= f.button :submit, "Add Ingredient", class: 'btn btn-danger'%>
<% end %>
